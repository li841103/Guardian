<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical" >

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:background="#12b7f5">

        <ImageView
            android:id="@+id/clockback"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="闹钟" />

    </RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp" 
        android:background="@color/white">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"
            android:text="时间"
            android:textSize="12sp" />

    </RelativeLayout>
    
	<RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="62dp" >

        <TextView
            android:id="@+id/clocktime"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView3"
            android:textColor="#12b7f5"
            android:textSize="32sp"
            android:text="00:00" />


        </RelativeLayout>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/biankuang"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e6e6e6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chongfu"
            android:layout_below="@+id/biankuang"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
            	android:layout_marginLeft="20dp"
            	android:textColor="#808080"
            	android:textSize="12sp"
                android:text="重复" />

        </RelativeLayout>


            <TextView
                android:id="@+id/clocksunday"
                android:layout_width="40dp"
                android:layout_height="40dp"
            	android:layout_below="@+id/chongfu"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/clockmonday"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#808080"
                android:text="日"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clockmonday"
                android:layout_width="40dp"
            	android:layout_below="@+id/chongfu"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/clocktuesday"
                android:textColor="#808080"
                android:gravity="center"
                android:text="一"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clocktuesday"
                android:layout_width="40dp"
            	android:layout_below="@+id/chongfu"
                android:layout_toLeftOf="@+id/clockwednesday"
                android:layout_marginRight="10dp"
                android:textColor="#808080"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="二"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clockwednesday"
                android:layout_width="40dp"
            	android:layout_below="@+id/chongfu"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#808080"
                android:gravity="center"
                android:text="三"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clockthursday"
                android:layout_width="40dp"
            	android:layout_below="@+id/chongfu"
                android:layout_toRightOf="@+id/clockwednesday"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColor="#808080"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="四"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clockfriday"
                android:layout_width="40dp"
                android:textColor="#808080"
            	android:layout_below="@+id/chongfu"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/clockthursday"
                android:gravity="center"
                android:text="五"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clocksaturday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#808080"
                android:layout_toRightOf="@+id/clockfriday"
                android:layout_marginLeft="10dp"
            	android:layout_below="@+id/chongfu"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="六"
                android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp" >

        <RelativeLayout
            android:id="@+id/finishbeijing"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >
        </RelativeLayout>

        <RelativeLayout
	        android:id="@+id/clockfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/finishbeijing"
            android:background="@drawable/list_item_bg"
            android:clickable="true" >
            
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:textSize="20dp"
	            android:textColor="#12b7f5"
	            android:text="完成" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
