<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="10dp" 
            android:orientation="vertical" >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                	android:background="@drawable/cornerslayout_first">

                    <com.szhd.ui.SwitchView
                        android:id="@+id/splitbutton2"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/imageView1"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textColor="#4d4d4d"
                        android:text="蓝牙防走散"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_bluetooth" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/splitbutton2" />

                </RelativeLayout>

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp" 
                android:background="#ffffff">

                <com.szhd.ui.SwitchView
	                android:id="@+id/splitbutton3"
	                android:layout_width="45dp"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp" />
                
                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_rate" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="#4d4d4d"
                    android:layout_marginLeft="8dp"
                    android:textSize="20sp" 
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="自动测心率" />
                
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0" >
            </LinearLayout>
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp" 
                android:background="@drawable/cornerslayout_last">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/diaoluo" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="#4d4d4d"
                    android:layout_marginLeft="8dp"
                    android:textSize="20sp" 
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="脱落报警" />
                
                <com.szhd.ui.SwitchView
	                android:id="@+id/splitbutton4"
	                android:layout_width="45dp"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp" />
                
            </RelativeLayout>
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/cornerslayout_first"
                android:layout_marginTop="10dp"
                android:layout_height="44dp" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_s" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#4d4d4d"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center_vertical"
                    android:text="电子围栏监控"
                    android:textSize="20sp" />
                
            </RelativeLayout>
			
            

            <com.szhd.ui.ListViewForScrollView
                android:id="@+id/elelistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerslayout_last"
                android:divider="@null" 
                android:layout_weight="1" >
            </com.szhd.ui.ListViewForScrollView>
            
            
            

                    	
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cornerslayout_first">

                <ImageView
                    android:id="@+id/addclock"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_nor" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_alarm" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imageView4"
                    android:gravity="center_vertical"
                    android:text="闹钟"
                    android:textSize="20sp" />
            </RelativeLayout>
            <com.szhd.ui.ListViewForScrollViewClock
                android:id="@+id/functionlistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerslayout_last"
                android:divider="@null" 
                android:layout_weight="1" >
            </com.szhd.ui.ListViewForScrollViewClock>

            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cornerslayout_first">

                <ImageView
                    android:id="@+id/addsleeptime"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_nor" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/zz" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:gravity="center_vertical"
                    android:text="安睡时间"
                    android:textSize="20sp" />
            </RelativeLayout>
            
            <com.szhd.ui.ListViewForScrollViewSleep
                android:id="@+id/functionsleeptimelistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerslayout_last"
                android:divider="@null" 
                android:layout_weight="1" >
            </com.szhd.ui.ListViewForScrollViewSleep>
            
        </LinearLayout>
    </ScrollView>
	
    <LinearLayout
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:background="@drawable/list_item_bg"
        android:gravity="center" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/btn_sleep" />
    </LinearLayout>
</LinearLayout>